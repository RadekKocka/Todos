@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p class="@fontWeight" role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount" @onmousemove="MouseOver" @onmouseout="MouseOut">Click me</button>

@code {
    private string fontWeight = string.Empty;
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void MouseOver()
    {
        fontWeight = "fw-bold";
    }
    private void MouseOut()
    {
        fontWeight = "fw-lighter";
    }
}
